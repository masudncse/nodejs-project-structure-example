<!-- Categories -->
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Categories</h4>
    </div>
    <ul class="list-group">
        {{#each categories as |category|}}
            <li class="list-group-item"><a href="/category/{{category.id}}">{{category.name}}</a></li>
        {{/each}}
    </ul>
</div>